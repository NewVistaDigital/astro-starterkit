---
// Layout
import { SITE_PHONE, SITE_PHONE_HREF } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
<section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-7xl text-primary-600 dark:text-primary-500">Success!</h1>
            <p class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white">We'll be in touch sooner than you think.</p>
            <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">If you need immediate help, give us a call.</p>
            <p class="text-3xl mb-6 font-bold text-blue-800 hover:text-blue-500"><a href={SITE_PHONE_HREF} title="Click or tap to call">{SITE_PHONE}</a></p>
            <a href="#" class="btn-primary">Back to Homepage</a>
        </div>   
    </div>
</section>
</BaseLayout>